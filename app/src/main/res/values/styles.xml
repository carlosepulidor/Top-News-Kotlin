<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#E2032E50</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentNavigation" tools:ignore="NewApi">true</item>
        <item name="android:windowBackground">#E2032E50</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="android:fitsSystemWindows">true</item>

    </style>

    <style name="AppTheme.SplashLoad" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">#E2032E50</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentNavigation" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>


    <style name="FacebookLoginButton">
        <item name="android:background">@drawable/ic_facebook</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
</resources>